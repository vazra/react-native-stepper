{
  "name": "material.ui",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/electron",
      "**/electron/**"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run --scope=@material.ui/* build",
    "watch": "lerna run --scope=@material.ui/* build",
    "build-stepper": "yarn workspace @material.ui/react-native-stepper run build",
    "watch-stepper": "yarn workspace @material.ui/react-native-stepper run watch",
    "publish": "yarn build && lerna changed && cross-env HUSKY_BYPASS=true lerna publish --cd-version patch",
    "clean": "lerna clean -y && rimraf node_modules",
    "reinstall": "yarn run clean && yarn run bootstrap"
  },
  "// devDependencies": {
    "@types/node": "Needed for unit test assertions (assert.equal() etc.)",
    "shx": "Needed for development-time package.json scripts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "13.0.0",
    "@rollup/plugin-node-resolve": "8.1.0",
    "@rollup/plugin-typescript": "5.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@types/jest": "26.0.3",
    "@types/node": "12.12.47",
    "jest": "26.1.0",
    "lerna": "3.22.1",
    "prettier": "2.0.5",
    "rollup": "2.19.0",
    "shx": "0.3.2",
    "typescript": "3.9.6",
    "@commitlint/cli": "9.0.1",
    "@commitlint/config-conventional": "9.0.1",
    "husky": "4.2.5",
    "cross-env": "7.0.2",
    "rimraf": "3.0.2",
    "tslib": "^2.0.0",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "expo-yarn-workspaces": "^1.2.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
